                  </tr>
                  <tr>
                    <td class="unsubscribe" align="center" style="text-align:center;font-size:11px;color:#999999">
                      <a href="<%= append_tracking(privacy_url) %>">Privacy</a> and <a href="<%= append_tracking(terms_url) %>">Terms of service</a>.
